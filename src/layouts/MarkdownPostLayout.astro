---
import BaseLayout from './BaseLayout.astro';
import '../styles/global.css';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>

<div class="tags">
    {frontmatter.tags.map((tag:any) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>

<slot />

<p>Publi√© le {new Date(frontmatter.pubDate).toLocaleDateString("fr", { day: "numeric", month: "long", year: "numeric" })}.</p>
</BaseLayout>

<style>
  a {
  color: red;
  text-decoration: none;
  }

  .tags {
    display: flex; 
    flex-wrap: wrap; 
    margin: 0 auto;  
  }

  .tag {
    margin: 0.25em;
    padding: .5em 1em;
    font-size: 1.15em;
  }

  body {
    font-family: arial;
  }
</style>